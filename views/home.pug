extends layout.pug

block content
    if song
        center
            h1 Welcome to the Woofy World home page!
            h3 Here is our most recently uploaded song:
            +song(song)
    else
        center <h1>You dun goofed.</h1>

mixin song(s)
    - let s2 = s.filename.split('.')[0];
    h4= s.user.username
    b #{s.song_name}
    p Release date: #{(s.release_date.toDateString())}
    audio(controls, src='/music/' + s2)